<p id="notice"><%= notice %></p>

<% if current_user.is_admin?%>
<button type="button" class="btn btn-info">
  <%= link_to 'New Branch', new_branch_path %>
</button>
<%end%>
<br/>
<h2><u>Listing Branches</u></h2>
<br/>

<br/>

<%if @branches.empty? %>
  <p>No branches found </p>
<%else %>
<table class ="table table-striped" id="myTable">
  <thead>
    <tr>
      <th class="text-success">Name</th>
      <th ></th>
      <th ></th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.order('created_at DESC').each do |branch| %>
      <tr>
        <td><%= branch.try(:name) %></td>
        <td><%= link_to 'Show', branch %></td>
        <% if can? :update, branch %> 
          <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
        <%end %> 
        <% if can? :destroy, branch %> 
          <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>    
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>

<script type="text/javascript">
   $('#myTable').DataTable();  
</script>

