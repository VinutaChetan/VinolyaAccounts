  <h3> You are seleted the Account Number : "<%= current_account.acc_no %>"</h3>
  <% def number_to_indian_currency(current_balance, html=true)%>
      <% txt = html ? ( 'Rs.') : 'Rs.' %>
      <% "#{txt} #{current_balance.to_s.gsub(/(\d+?)(?=(\d\d)+(\d)(?!\d))(\.\d+)?/, "\\1,")}"%>
    <%end%> 

  <h3>Current Balance : <%=number_to_indian_currency(current_account.current_balance)%></h3>
<%end%>
