<table >
                    <thead>
                      <tr>
                        <th >SI.no</th>
                        <th >Transaction Date</th>
                        <th >Company Name</th>
                        <th >Account Number</th>
                        <th >Particular</th>
                        <th >Transaction type</th>
                        <th >Amount</th>
                        <th >Transaction kind</th>
                        <th >Remark</th> 
                        <th >Show</th>
                      </tr>
                    </thead>

                    <tbody >

                      <%@transactions.order('created_at DESC').limit(20).each_with_index do |val,index|%>
                       
                      <tr>
                        <td><%=index+1%></td>
                        <td><%= val.transaction_date.to_s(:long) %></td>
                        <td><%=link_to val.company.name,company_path(val.company.id)%></td>
                        <td><%=link_to val.account.acc_no,account_path(val.account.id)%>
                        <td><%=link_to val.perticular.name,perticular_path(val.perticular.id) %></td>
                        <td><%= val.transaction_type %></td>
                        <td><%= val.amount%></td>
                        <td><%= val.transaction_kind %></td>
                        <td><%= val.remark %></td>
                        <td><%= link_to 'Show',val,class: "btn btn-info" %></td>
                      </tr> 
                      <%end%>
                    </tbody>
                  </table>             