<p id="notice"><%= notice %></p>

<h1>Listing Banks</h1>

<table class ="table table-striped" id="myTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Manager</th>
      <th>Contact details</th>
      <th>Branch</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td><%= bank.address %></td>
        <td><%= bank.manager %></td>
        <td><%= bank.contact_details %></td>
        <td><%= bank.branch.name %></td>
        <td><%= bank.company.name %></td>
        <td><%= link_to 'Show', bank %></td>
        <% if current_user.is_admin? %>
          <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
          <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.is_admin? %>
  <%= link_to 'New Bank', new_bank_path %>
<%end%>