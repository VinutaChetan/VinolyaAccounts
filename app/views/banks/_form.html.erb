<%= form_for(@bank) do |f| %>
  <% if @bank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bank.errors.count, "error") %> prohibited this bank from being saved:</h2>

      <ul>
      <% @bank.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name ,class:"col-sm-6" ,autofocus: true%><br/><br/>
    <p id ="bank_nameError"></p>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address ,class:"col-sm-6" %><br/><br/><br/>
    <p id ="bank_addressError"></p>
  </div>
  <div class="field">
    <%= f.label :manager %><br>
    <%= f.text_field :manager ,class:"col-sm-6" %><br/><br/>
    <p id ="bank_managerError"></p>
  </div>
  <div class="field">
    <%= f.label :contact_details %><br>
    <%= f.text_field :contact_details ,class:"col-sm-6" %><br/><br/>
    <p id ="bank_contactError"></p>
  </div>
  <div class="field">
    <%= f.label :branch_id %><br>
    <%= f.collection_select :branch_id,Branch.all,:id,:name,{prompt:"Select branch"},{ class: 'chosen-select' }%><br/><br/>
  </div>
  <div class="field">
    <%= f.label :company_id %><br>
    <%= f.collection_select :company_id,Company.all,:id,:name, {prompt:"Select company name"},{ class: 'chosen-select' }%><br/><br/>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link ,class:"col-sm-6" %><br/><br/>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div><br/> 
<% end %>

<script>
  var bank_nameHandle =document.getElementById('bank_name'); 
  var nameErrorHandle = document.getElementById('bank_nameError');

  var bank_addressHandle =document.getElementById('bank_address');
  var addressErrorHandle = document.getElementById('bank_addressError');

  var bank_managerHandle = document.getElementById('bank_manager');
  var managerErrorHandle = document.getElementById('bank_managerError');

  var bank_contactHandle =document.getElementById('bank_contact_details');
  var contactErrorHandle =document.getElementById('bank_contactError');

  bank_nameHandle.onblur = function(){
    if(bank_nameHandle.value == ""){
      nameErrorHandle.innerHTML = "Cant't be blank";
    }else{
      nameErrorHandle.innerHTML = "";
    }  
  }

  bank_addressHandle.onblur = function(){
    if(bank_addressHandle.value == ""){
      addressErrorHandle.innerHTML = "Cant't be blank";
    }else{
      addressErrorHandle.innerHTML = "";
    }  
  }

  bank_managerHandle.onblur = function(){
    if(bank_managerHandle.value == ""){
      managerErrorHandle.innerHTML = "Cant't be blank";
    }else{
      managerErrorHandle.innerHTML = "";
    }  
  }

  bank_contactHandle.onblur = function(){
    if(bank_contactHandle.value == ""){
      contactErrorHandle.innerHTML = "Cant't be blank";
    }else{
      contactErrorHandle.innerHTML = "";
    }  
  }

</script>




















