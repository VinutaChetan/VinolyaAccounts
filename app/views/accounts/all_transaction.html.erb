
	
	     <div class="container">
	        <div class="row">
	            <table class ="table table-striped table2">
	              	<thead>
		                <tr>
		                    <th>SI.no</th>
		                    <th>Transaction Date</th>
		                    <th>Company Name</th>
		                    <th>Account Number</th>
		                    <th>Particular</th>
		                    <th>Transaction type</th>
		                    <th>Amount</th>
		                    <th>Transaction kind</th>
		                    <th>Instrument Date</th>
		                    <th>Instrument Number</th>
		                    <th>Remark</th> 
		                                   
	                	</tr>    
            	  	</thead>
            	  	<% i =1 %>
            	  	<% @account.transactions.list[params[:year].to_i].each do |months| %>
					<% months.each do |key,value|%>
						<%#= binding.pry %>
						<% if value.present? %>
	                	<tbody >

			                <% value.order('transaction_date ASC').each do |trans|%>
			                
				                <tr>
				                    <td>   <%=i%></td>
				                    <td>  <%=trans.transaction_date.strftime("%d-%m-%Y")%></td>
				                    <td>  <%=trans.company.try(:name)%></td>
				                    <td>  <%=trans.account.acc_no%></td>
				                    <td>  <%=trans.perticular.name%></td>
				                    <td>  <%=trans.transaction_type%></td>
				                    <td>  <%=trans.amount%></td>
				                    <td><%= trans.transaction_kind %></td>
				                    <td><%= trans.instrument_date.strftime("%d-%m-%Y") if trans.instrument_date != nil%></td>
				                    <td><%= trans.instrument_number%></td>
				                    <td>  <%=trans.remark%></td>
				                    
				                </tr>
				                <% i+=1 %>
				            <% end %>    
						</tbody>
						<% end %>
					<% end%>
					<%end%>
				</table>	
	        </div>
	    </div> 
		
		

<script type="text/javascript">
   $('.table2').DataTable();  
</script>
						
