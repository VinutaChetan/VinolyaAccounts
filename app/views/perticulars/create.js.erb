<% if @perticular.valid? %>
	$('#errorMsg').hide();
	$('#notice').text("successfully created");
 	
	$('#myModal').modal('toggle');
	$('#new_perticular')[0].reset();
	$('#transaction_perticular_id').append("<%= escape_javascript(render 'option')%>");
	$('#transaction_perticular_id').trigger("chosen:updated");
	<% if @perticular.perticular_type == "debit" %>
		$('#transaction_transaction_type_debit').prop("checked", true);	
	<% elsif @perticular.perticular_type == "credit"%>
		$('#transaction_transaction_type_credit').prop("checked", true);
	<% end %>	
<%else %>
	$('#errorMsg').html("<%= escape_javascript(render 'errors')%>");
<%end%> 	 

