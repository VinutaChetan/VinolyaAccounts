<script>
$(document).ready(function(){
    $('#myTable').DataTable();
});
</script>


<p id="notice"><%= notice %></p>

<% if current_user.is_admin?%>
  <%= link_to 'New Particular', new_perticular_path %>
<%end%><br/>

<h1>Listing Particulars</h1>

<div class="container">
<table class ="table table-striped" id="myTable">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perticulars.order('created_at DESC').each do |perticular| %>
      <tr>
        <td><%= perticular.name %></td>
        <td><%= link_to 'Show', perticular %></td>
        <% if can? :update,perticular %> 
          <td><%= link_to 'Edit', edit_perticular_path(perticular) %></td>
        <%end%>
        <% if can? :destroy, perticular %> 
          <td><%= link_to 'Destroy', perticular, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

