<p id="notice"><%= notice %></p>

<% if current_user.is_admin?%>
<button type="button" class="btn btn-info">
  <%= link_to 'New Particular', new_perticular_path %>
</button>
<%end%><br/>
<br/>
<h2><u>Listing Particulars</u></h2>
<br/>

<br/>
<%if @perticulars.empty? %>
  <p>No perticulars found </p>
<%else %>
<div class="container">
<table class ="table table-striped" id="myTable">
  <thead>
    <tr>
      <th class="text-success">Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @perticulars.order('created_at DESC').each do |perticular| %>
      <tr>
        <td><%= perticular.try(:name) %></td>
        <td><%= link_to 'Show', perticular %></td>
        <% if can? :update,perticular %> 
          <td><%= link_to 'Edit', edit_perticular_path(perticular) %></td>
        <%end%>
        <% if can? :destroy, perticular %> 
          <td><%= link_to 'Destroy', perticular, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%end%>
<br>

<script type="text/javascript">
   $('#myTable').DataTable();  
</script>

